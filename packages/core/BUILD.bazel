package(default_visibility=["//visibility:public"])

load("@angular//:index.bzl", "ng_library", "ng_entry_point")

ng_library(
  name = "core",
  srcs = glob(["**/*.ts"], exclude=[
      "index.ts",
      "test/**",
      "testing/**",
  ]),
  module_name = "@angular/core",
  tsconfig = ":tsconfig-build.json",
)

ng_entry_point(
  name = "entry_point",
  srcs = [":core"],
  index = ":index.ts",
  apis = ":public_api.ts",
  rollup_config = ":rollup.config.js",
)
